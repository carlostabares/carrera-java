<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>resources/views/about.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>service</from-outcome>
            <to-view-id>resources/views/service.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>contact</from-outcome>
            <to-view-id>resources/views/contact.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>resources/views/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>acount</from-outcome>
            <to-view-id>resources/views/dashboard/acount.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>afiliados</from-outcome>
            <to-view-id>resources/views/dashboard/afiliados.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>
    
    <navigation-rule>        
        <from-view-id>resources/views/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>resources/views/dashboard/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>resources/views/login.xhtml</to-view-id>            
        </navigation-case>        
    </navigation-rule>
</faces-config>

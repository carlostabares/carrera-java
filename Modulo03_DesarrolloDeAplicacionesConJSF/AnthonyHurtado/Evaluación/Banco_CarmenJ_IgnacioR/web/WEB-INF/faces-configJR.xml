<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>contacto</from-outcome>
            <to-view-id>/vistas/todoPublico/contacto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>servicios</from-outcome>
            <to-view-id>/vistas/todoPublico/servicios.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/vistas/todoPublico/inicio.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
        <!-- LoginNavigation -->
    <navigation-rule>        
        <from-view-id>/vistas/todoPublico/inicio.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/vistas/clientes/dashboard.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/vistas/todoPublico/inicio.xhtml</to-view-id>            
        </navigation-case>        
    </navigation-rule>
</faces-config>
